<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <fragment
        android:id="@+id/account_fragment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:name="com.example.android_doctor.top_layout_fragment"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Name"
        android:id="@+id/name_account"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:layout_below="@id/account_fragment"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="E-mail"
        android:id="@+id/email_account"
        android:background="@drawable/editview_bg"
        android:padding="10dp"

        android:layout_below="@id/name_account"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:id="@+id/phone_account"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:layout_below="@id/email_account"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Address"
        android:layout_below="@id/phone_account"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:id="@+id/address_account"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/address_btn_account"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/address_account"
        android:layout_below="@id/phone_account"
        android:background="@drawable/ic_baseline_add_location_alt_24"
        />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bloodgroup_account"
        android:layout_margin="10dp"
        android:hint="Blood Group"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:layout_below="@+id/address_account"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/submit_account"
        android:background="@drawable/button_background"
        android:text="Save"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/bloodgroup_account" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/reset_account"
        android:layout_below="@id/submit_account"
        android:text="Reset"
        android:background="@drawable/button_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>