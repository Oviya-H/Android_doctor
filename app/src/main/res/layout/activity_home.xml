<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:name="com.example.android_doctor.top_layout_fragment"
        android:id="@+id/top_fragment_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_fragment_home"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:id="@+id/welcome_home"
            android:textStyle="bold"

            />


                <ImageView
                    android:id="@+id/image_pres"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/pres"
                    android:layout_above="@id/image_appoinment"
                    android:layout_margin="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/menu_prescription"
                    android:background="@drawable/button_background"
                    android:layout_marginBottom="100dp"
                    android:padding="10dp"
                    android:layout_above="@id/menu_appoinments"
                    android:layout_toRightOf="@id/image_pres"
                    android:text="My Prescription"

                    />




                <ImageView
                    android:id="@+id/image_appoinment"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/cal" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/menu_appoinments"
                    android:text="My Appointments"
                    android:padding="10dp"
                    android:layout_toRightOf="@id/image_appoinment"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_background"
                    />




                <ImageView
                    android:id="@+id/image_account"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:layout_below="@id/image_appoinment"
                    android:background="@drawable/acc" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/menu_account"
                    android:layout_marginTop="100dp"
                    android:layout_below="@id/menu_appoinments"
                    android:layout_toRightOf="@id/image_account"
                    android:background="@drawable/button_background"
                    android:text="Account"
                    />


</RelativeLayout>