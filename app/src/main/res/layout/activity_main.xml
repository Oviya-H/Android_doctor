<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/simple"
        android:background="@drawable/register_bg2"
        />

    <EditText
        android:id="@+id/username_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number    "
        android:inputType="number"
        android:layout_below="@id/simple"
        android:layout_centerHorizontal="true"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/password_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_signup"
        android:hint="Password       "
        android:inputType="textPassword"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/repassword_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_signup"
        android:layout_centerHorizontal="true"
        android:hint="Retype Password"
        android:background="@drawable/editview_bg"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_margin="20dp"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/repassword_signup"
    android:layout_marginTop="10dp"
    android:id="@+id/ll"
    android:orientation="horizontal"

    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/Verify_signup"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:text="Verify"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:padding="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/register_signup"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="Register"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textStyle="bold"

        />


</LinearLayout>


    <Button
        android:id="@+id/login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll"
        android:background="@color/Transparent"
        android:textColor="@color/blue"
        android:text="already have an acccount? login here"

        />


</RelativeLayout>