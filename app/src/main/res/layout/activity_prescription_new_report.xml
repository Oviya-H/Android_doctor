<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prescription_new_report">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:name="com.example.android_doctor.top_layout_fragment"
            android:id="@+id/report_fragment"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pres_title"
            android:hint="Title"
            android:layout_below="@id/report_fragment"
            android:background="@drawable/editview_bg"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/pres_date"
            android:hint="Date"
            android:layout_margin="10dp"
            android:background="@drawable/editview_bg"
            android:padding="10dp"
            android:layout_below="@id/pres_title"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/pres_date_bt"
            android:layout_margin="10dp"
            android:layout_below="@id/pres_title"
            android:layout_toRightOf="@id/pres_date"
            android:background="@drawable/ic_baseline_calendar_today_24"/>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:id="@+id/pres_image"
            android:layout_margin="10dp"
            android:layout_below="@id/pres_date"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_baseline_add_a_photo_24"/>



        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pres_image"
            android:background="@drawable/ic_baseline_photo_camera_24"
            android:id="@+id/pres_camera"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/pres_save_bt"
            android:text="save"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:layout_below="@id/pres_image"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</ScrollView>